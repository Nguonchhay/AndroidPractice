<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewComponent"
            android:layout_marginStart="10dp"
            android:text="View Compponents"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentStyle1"
            android:layout_marginStart="10dp"
            android:text="Fragment Style 1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCardView"
            android:layout_marginStart="10dp"
            android:text="CardView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnRecycleview"
            android:layout_marginStart="10dp"
            android:text="RecycleView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewPager2"
            android:layout_marginStart="10dp"
            android:text="ViewPager2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnViewPagerWithTab"
            android:layout_marginStart="10dp"
            android:text="ViewPager2 with Tab"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBottomNav"
            android:layout_marginStart="10dp"
            android:text="Bottom Navigation"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnActivityForResult"
            android:layout_marginStart="10dp"
            android:text="Start Activity for Result"/>

    </LinearLayout>

</RelativeLayout>